{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "types": ["node", "jest"]
  },
  "include": [
    "./src/**/**.*",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
